{% extends 'base.html.twig' %}

{% block title %}Doctor Dashboard
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="col-md-12">
		<div class="row">
			<div class="col-md-2" style="margin-left: -30px;">
				{% include 'sidenav.html.twig' %}
			</div>
			<div class="col-md-10">
				<h6 class="my-2 text-white">Doctor Dashboard</h6>
				<div class="col-md-12 my-1">
					<div class="row">
						<div class="col-md-3 bg-success mx-2" style="height: 130px;">
							<div class="col-md-12">
								<div class="row">
									<div class="col-md-8">
										<h5 class="my-2 text-white texte-center" style="font-size: 30px;">
											{{ totalPatients }}</h5>
										<h5 class="text-white">Total</h5>
										<h5 class="text-white">Patients</h5>
									</div>
									<div class="col-md-4">
										<a href="{{ path('patients') }}">
											<i class="fa fa-procedures fa-3x my-4" style="color:white;"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-3 bg-danger mx-2" style="height: 130px;">
							<div class="col-md-12">
								<div class="row">
									<div class="col-md-8">
										<h5 class="my-2 text-white texte-center" style="font-size: 30px;">
											{{ totalConsultations }}</h5>
										<h5 class="text-white">Total</h5>
										<h5 class="text-white">Consultations</h5>
									</div>
									<div class="col-md-4">
										<a href="{{ path('consultations') }}">
											<i class="fa fa-hospital-user fa-3x my-4" style="color:white;"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-3 bg-warning mx-2" style="height: 130px;">
							<div class="col-md-12">
								<div class="row">
									<div class="col-md-8">
										<h5 class="my-2 text-white texte-center" style="font-size: 30px;">
											{{ totalOrdonnances }}</h5>
										<h5 class="text-white">Total</h5>
										<h5 class="text-white">Ordonnances</h5>
									</div>
									<div class="col-md-4">
										<a href="{{ path('ordonnances') }}">
											<i class="fa fa-prescription-bottle fa-3x my-4" style="color:white;"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="img">
						<img src="../img/undraw.svg" width="950" height="300">
					</div>
				</div>
			</div>
